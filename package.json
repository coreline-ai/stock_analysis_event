{
  "name": "deepstock-research-only",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "NEXT_DIST_DIR=.next-dev next dev",
    "dev:3333": "NEXT_DIST_DIR=.next-dev next dev -p 3333",
    "dev:3333:all": "NEXT_DIST_DIR=.next-dev next dev -p 3333 -H 0.0.0.0",
    "dev:up": "bash scripts/dev_up.sh",
    "dev:down": "bash scripts/dev_down.sh",
    "dev:status": "bash scripts/dev_status.sh",
    "dev:local": "bash scripts/dev_local.sh",
    "build": "next build",
    "start": "next start",
    "start:3333": "next start -p 3333",
    "lint": "next lint",
    "branding:check": "tsx scripts/check_branding_terms.ts",
    "db:scan:branding": "tsx scripts/db_scan_branding.ts",
    "branding:clean": "npm run -s branding:check && npm run -s db:scan:branding",
    "test": "npm run -s branding:check && tsx scripts/run_tests.ts",
    "diagnose:quality": "tsx scripts/diagnose_quality.ts",
    "test:lock:e2e": "tsx scripts/lock_e2e_smoke.ts",
    "test:gui": "tsx scripts/gui_quality_check.ts",
    "test:gui:features": "tsx scripts/gui_feature_check.ts",
    "maintenance:rebuild-placeholders": "tsx scripts/rebuild_placeholders.ts",
    "db:up": "bash scripts/db_up.sh",
    "db:down": "bash scripts/db_down.sh",
    "db:migrate": "tsx scripts/db_migrate.ts"
  },
  "dependencies": {
    "next": "14.2.6",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@types/node": "20.14.11",
    "@types/pg": "^8.16.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.6",
    "playwright": "^1.58.2",
    "tsx": "4.19.2",
    "typescript": "5.5.4"
  }
}
